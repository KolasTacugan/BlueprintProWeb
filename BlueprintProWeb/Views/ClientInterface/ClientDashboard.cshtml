@{
    ViewData["Title"] = "ClientDashboard";
    Layout = "~/Views/Shared/_ClientSharedLayout.cshtml";
}

@section Styles {
    <style>
        html, body {
            height: 100%;
            min-height: 100%;
        }

        body {
            background: #f6f7fa url('/images/dashboard-bg.jpg') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            height: 100%;
            overflow-y: auto;
        }

        .dashboard-content-wrapper {
            position: relative;
            z-index: 10;
            background: transparent;
            min-height: 100vh;
            width: 100%;
            max-width: 1400px;
            margin: 0 auto;
            padding: 2.5rem 1.5rem 2.5rem 1.5rem;
            /* Add a little margin for separation from the page edge */
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        .dashboard-greeting {
            color: #091635;
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 2rem;
        }

        .dashboard-greeting .text-primary {
            color: #0D3C80 !important;
        }

        .dashboard-row {
            display: flex;
            gap: 2rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .dashboard-stats {
            display: flex;
            gap: 2rem;
            flex: 2 1 0;
            min-width: 0;
        }

        .stat-card {
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
            border: 1px solid #DEE2E6;
            flex: 1 1 0;
            min-width: 180px;
            padding: 1.5rem 1rem;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: center;
            min-height: 110px;
        }

        .stat-card .stat-icon {
            font-size: 1.5rem;
            color: #0D3C80;
            margin-bottom: 0.5rem;
        }

        .stat-card .stat-value {
            color: #0D3C80;
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.25rem;
        }

        .stat-card .stat-label {
            color: #091635;
            font-size: 1.1rem;
            font-weight: 700;
        }

        .dashboard-blueprints {
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
            border: 1px solid #DEE2E6;
            min-width: 260px;
            max-width: 320px;
            flex: 1 1 260px;
            padding: 1.5rem 1rem;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
        }

        .dashboard-blueprints .blueprint-header {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 700;
            color: #091635;
            margin-bottom: 0.5rem;
        }

        .dashboard-blueprints .blueprint-header i {
            background: #DEE2E6;
            color: #0D3C80;
            border-radius: 6px;
            padding: 0.3rem 0.5rem;
            font-size: 1.1rem;
        }

        .dashboard-blueprints .blueprint-link {
            margin-left: auto;
            font-size: 0.98rem;
            color: #0D3C80;
            font-weight: 600;
            text-decoration: underline;
        }

        .dashboard-blueprints .blueprint-table {
            background: #F8FAFC;
            border-radius: 8px;
            padding: 0.75rem 1rem;
            margin-top: 0.5rem;
            font-size: 1rem;
        }

        .dashboard-blueprints .blueprint-table th {
            font-size: 1rem;
            font-weight: 700;
            color: #091635;
            border: none;
            background: transparent;
            padding: 0 0 0.25rem 0;
        }

        .dashboard-blueprints .blueprint-table td {
            border: none;
            padding: 0.15rem 0;
            color: #091635;
        }   

        .dashboard-section {
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
            border: 1px solid #DEE2E6;
            padding: 1.5rem 1.5rem 1.2rem 1.5rem;
            margin-bottom: 2rem;
        }

        .dashboard-section .section-header {
            align-items: center;
            gap: 0.5rem;
            font-weight: 700;
            color: #091635;
            font-size: 1.25rem;
            margin-bottom: 1rem;
        }

        .dashboard-section .section-header i {
            background: #DEE2E6;
            color: #0D3C80;
            border-radius: 6px;
            padding: 0.3rem 0.5rem;
            font-size: 1.1rem;
        }

        .dashboard-section .section-link {
            margin-left: auto;
            font-size: 0.98rem;
            color: #0D3C80;
            font-weight: 600;
            text-decoration: underline;
        }

        .dashboard-matches-table {
            width: 100%;
            border-radius: 8px;
            overflow: hidden;
            background: #F8FAFC;
            margin-bottom: 0;
        }

        .dashboard-matches-table th {
            background: #DEE2E6;
            color: #091635;
            font-weight: 700;
            font-size: 1rem;
            border: none;
            padding: 0.75rem 1rem;
        }

        .dashboard-matches-table td {
            background: #fff;
            color: #091635;
            font-size: 1rem;
            border: none;
            padding: 0.7rem 1rem;
        }

        .dashboard-matches-table tr:not(:last-child) td {
            border-bottom: 1px solid #DEE2E6;
        }

        .dashboard-overview {
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
            border: 1px solid #DEE2E6;
            padding: 1.5rem 1.5rem 1.2rem 1.5rem;
        }

        .overview-header {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 700;
            color: #091635;
            font-size: 1.25rem;
            margin-bottom: 1rem;
        }

        .overview-header i {
            background: #DEE2E6;
            color: #0D3C80;
            border-radius: 6px;
            padding: 0.3rem 0.5rem;
            font-size: 1.1rem;
        }

        .overview-controls {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 1.2rem;
        }

        .overview-controls .badge {
            background: #0D3C80;
            color: #fff;
            border-radius: 12px;
            font-size: 1rem;
            padding: 0.3rem 1rem;
            font-weight: 600;
        }

        .overview-controls .btn {
            background: #DEE2E6;
            color: #0D3C80;
            border: none;
            border-radius: 50%;
            width: 2rem;
            height: 2rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            padding: 0;
        }

        .overview-controls .progress {
            flex: 1;
            height: 5px;
            background: #DEE2E6;
            border-radius: 3px;
            margin-left: 1rem;
            margin-right: 1rem;
        }

        .overview-controls .progress-bar {
            background: #0D3C80;
            border-radius: 3px;
        }

        .overview-circles {
            display: flex;
            justify-content: space-between;
            gap: 1.5rem;
            flex-wrap: wrap;
        }

        .overview-circle {
            flex: 1 1 0;
            min-width: 120px;
            max-width: 180px;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 1rem;
        }

        .circle-chart {
            width: 110px;
            height: 110px;
            margin-bottom: 0.5rem;
        }

        .circle-chart text {
            font-size: 1.2rem;
            font-weight: 700;
            fill: #091635;
        }

        @@media (max-width: 1200px) {
            .dashboard-content-wrapper {
                padding: 1.5rem 0.5rem;
            }

            .dashboard-row {
                flex-direction: column;
                gap: 1.5rem;
            }

            .dashboard-stats {
                flex-direction: row;
                gap: 1rem;
            }

            .dashboard-blueprints {
                max-width: 100%;
            }
        }

        @@media (max-width: 767.98px) {
            .dashboard-content-wrapper {
                padding: 0.5rem 0.1rem;
                margin-top: 0.5rem;
                margin-bottom: 0.5rem;
                border-radius: 10px;
            }

            .dashboard-main {
                padding: 0.5rem 0 !important;
            }

            .dashboard-row, .dashboard-stats, .overview-circles {
                flex-direction: column;
                gap: 1rem;
            }

            .dashboard-blueprints, .stat-card, .dashboard-section, .dashboard-overview {
                padding: 1rem !important;
            }

            .circle-chart {
                width: 80px;
                height: 80px;
            }
        }
    </style>
}


<div class="dashboard-content-wrapper">
    <div class="dashboard-main">
        <div class="container-fluid" style="max-width: 1300px;">
            <div class="dashboard-greeting mb-4 pt-4">
                Welcome, <span class="text-primary">@ViewData["UserFirstName"]</span>!
            </div>

            <div class="dashboard-row">
                <div class="dashboard-stats">
                    <div class="stat-card">
                        <span class="stat-icon"><i class="fas fa-users"></i></span>
                        <span class="stat-value">3</span>
                        <span class="stat-label">Total Matches</span>
                    </div>
                    <div class="stat-card">
                        <span class="stat-icon"><i class="fas fa-shopping-cart"></i></span>
                        <span class="stat-value">1</span>
                        <span class="stat-label">Total Purchase</span>
                    </div>
                    <div class="stat-card">
                        <span class="stat-icon"><i class="fas fa-folder-open"></i></span>
                        <span class="stat-value">1</span>
                        <span class="stat-label">Total Projects</span>
                    </div>
                </div>
                <div class="dashboard-blueprints ms-auto">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <div class="blueprint-header">
                            <i class="fas fa-file-alt"></i> Blueprints
                        </div>
                        <a href="/ClientInterface/BlueprintMarketplace" class="blueprint-link">Go to Marketplace</a>
                    </div>
                    <div class="blueprint-table mt-2">
                        <table class="w-100">
                            <thead>
                                <tr>
                                    <th>Blueprint Purchased</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1. White House Design</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="dashboard-row" style="gap:0;">
                <div class="dashboard-section" style="flex:2 1 0; margin-right:2rem;">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <div class="section-header">
                            <i class="fas fa-users"></i> Matches
                        </div>
                        <a href="/ClientInterface/Matches" class="section-link">Find an Architect</a>
                    </div>
                    <div class="table-responsive">
                        <table class="dashboard-matches-table">
                            <thead>
                                <tr>
                                    <th>Architect Name</th>
                                    <th>Type</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Clark Moore</td>
                                    <td>Residential Architecture</td>
                                </tr>
                                <tr>
                                    <td>Vanessa Kang</td>
                                    <td>Commercial Architecture</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="dashboard-overview mt-3">
                <div class="overview-header mb-2">
                    <i class="fas fa-chart-pie"></i> Project Overview
                </div>
                <div class="overview-controls mb-3">
                    <span class="badge">White H..</span>
                    <button class="btn"><i class="fas fa-chevron-left"></i></button>
                    <button class="btn"><i class="fas fa-chevron-right"></i></button>
                    <div class="progress flex-grow-1 mx-2">
                        <div class="progress-bar" style="width: 60%"></div>
                    </div>
                </div>
                <div class="overview-circles">
                    <div class="overview-circle">
                        <svg width="110" height="110" class="circle-chart">
                            <circle cx="55" cy="55" r="48" fill="none" stroke="#DEE2E6" stroke-width="8"></circle>
                            <circle cx="55" cy="55" r="48" fill="none" stroke="#0D3C80" stroke-width="8"
                                    stroke-dasharray="301.59" stroke-dashoffset="0"
                                    style="transform: rotate(-90deg); transform-origin: 55px 55px;"></circle>
                            <text x="55" y="62" text-anchor="middle">100%</text>
                        </svg>
                        <div>Planning</div>
                    </div>
                    <div class="overview-circle">
                        <svg width="110" height="110" class="circle-chart">
                            <circle cx="55" cy="55" r="48" fill="none" stroke="#DEE2E6" stroke-width="8"></circle>
                            <circle cx="55" cy="55" r="48" fill="none" stroke="#0D3C80" stroke-width="8"
                                    stroke-dasharray="301.59" stroke-dashoffset="0"
                                    style="transform: rotate(-90deg); transform-origin: 55px 55px;"></circle>
                            <text x="55" y="62" text-anchor="middle">100%</text>
                        </svg>
                        <div>Designing</div>
                    </div>
                    <div class="overview-circle">
                        <svg width="110" height="110" class="circle-chart">
                            <circle cx="55" cy="55" r="48" fill="none" stroke="#DEE2E6" stroke-width="8"></circle>
                            <circle cx="55" cy="55" r="48" fill="none" stroke="#0D3C80" stroke-width="8"
                                    stroke-dasharray="301.59" stroke-dashoffset="100"
                                    style="transform: rotate(-90deg); transform-origin: 55px 55px;"></circle>
                            <text x="55" y="62" text-anchor="middle">67%</text>
                        </svg>
                        <div>Development</div>
                    </div>
                    <div class="overview-circle">
                        <svg width="110" height="110" class="circle-chart">
                            <circle cx="55" cy="55" r="48" fill="none" stroke="#DEE2E6" stroke-width="8"></circle>
                            <text x="55" y="62" text-anchor="middle" fill="#DEE2E6">
                                <tspan font-size="2rem"><i class="fas fa-clock"></i></tspan>
                            </text>
                        </svg>
                        <div>Testing</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>