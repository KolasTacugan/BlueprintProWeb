<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlueprintProWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlueprintProWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    @*STYLES*@
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }
        body{
            min-height: 100vh;
            background-color: #D6D9E0; /* base color */
            margin: 0;
            position: relative;
            overflow: hidden; /* just in case */
        }
        body::before{
            content: "";
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            background: url("/images/BPP_Dashboard_BG.png") center/cover no-repeat;
            opacity: 0.4;
            z-index: -1;
            pointer-events: none;
        }
        .sidebar {
            width: 270px;
            position: fixed;
            margin: -8px 8px 16px 16px;
            border-radius: 10px;
            background: #071744;
            height: calc(100vh - 32px);
            transition: 0.4s ease;
            z-index: 1000;
        }
        .sidebar.collapsed{
            width: 85px;
        }
        .sidebar-header{
            position: relative;
            display: flex;
            padding: 25px 20px;
            align-items: center;
            justify-content: space-between;
        }
        .sidebar-header .header-logo {
            display: flex; /* so it hugs the img */
            align-items: center;
            justify-content: center;
            padding: 0; /* remove extra padding */
            margin: 0; /* remove extra margin */
        }
        .sidebar-header .header-logo img{
            width: 46px;
            height: 46px;
            display: block;
            object-fit: contain;
            border-radius: 50%;
        }
        .sidebar-header .system-name {
            font-size: 1.2rem;   /* bigger than nav-labels */
            font-weight: 700;   /* bold */
            color: #fff;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            transition: opacity 0.4s ease, width 0.4s ease;
        }
        .system-name{
            margin-right: 24px;
            margin-top: 10px;
        }
        .sidebar-nav .nav-list {
            list-style: none;
            display: flex;
            gap: 4px;
            padding: 0 15px;
            flex-direction: column;
            transform: translateY(15px);
        }
        .sidebar-header .toggler{
            position: absolute;
            right: -15px;
            height: 35px;
            width: 35px;
            border: none;
            color: #071744;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border-radius: 50%;
            background: #fff;
            transition: 0.4s ease;
        }
        .sidebar.collapsed .sidebar-header .toggler{
            transform: translate(5px, 0px);
        }
        .sidebar.collapsed .sidebar-header .toggler span{
            transform: rotate(180deg);
            border-radius: 50%;
            outline: 4px solid #071744;
            outline-offset: 4px;
            transition: transform ease-in-out.4s ease;
        }

        .sidebar-header .system-name {
            transition: opacity 1.5s ease;
        }
        .sidebar.collapsed .sidebar-header .system-name {
            opacity: 0;
            width: 0;
            pointer-events: none;
        }
        .sidebar-header .toggler:hover{
            background: #dde4fb;
        }
        .sidebar-header .toggler span{
            font-size: 1.75rem;
            border-radius: 50%;
            outline: 4px solid #071744;
            outline-offset: 4px;
            transition: transform 0.4s ease, outline 0.4s ease;
        }
        .sidebar-nav .nav-link {
            display: flex;
            align-items: center;
            color: #fff;
            text-decoration: none;
            gap: 50px;
            padding: 12px 15px;
            border-radius: 8px;
            transition: 0.4s ease;
        }
        .sidebar-nav .nav-link:hover{
            background: #fff;
            color: #071744;
        }
        .sidebar-nav .nav-link .nav-label{
            transition: opacity 0.4s ease;
        }
        .sidebar.collapsed .sidebar-nav .nav-link .nav-label{
            opacity: 0;
            pointer-events: none;
        }
        .sidebar-nav{
            position: absolute;
            width: 100%;
            padding-top: 20px;
        }

        .navbar {
            position: fixed;
            top: 15px;
            left: 15px;
            right: 15px;
            height: 60px;
            background: #fff;
            z-index: 90;
            display: flex;
            justify-content: flex-end; 
            align-items: center; 
            border-radius: 8px;
        }

        .navbar-div {
            display: flex;
            align-items: center; 
            height: 100%; 
        }

        .navbar-list {
            display: flex; 
            align-items: center; 
            margin: 0;
            padding: 0;
        }

        .top-nav-item {
            list-style: none;
        }

        .top-nav-item a {
            display: flex;
            align-items: center; 
            justify-content: center;
            color: #071744;
            margin-right: 25px;
            text-decoration: none;
            height: 100%; 
            gap: 6px; 
        }

        .logout-form {
            position: absolute;
            bottom: 20px;
            width: calc(100% - 30px);
            left: 15px;
        }

        .logout-btn {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 8px;
            background: #e63946; /* red */
            color: #fff;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            cursor: pointer;
            transition: 0.3s ease;
        }

        .logout-btn:hover {
            background: #fff;
            border-color: #d62828;
        }

        #notificationPanel {
            max-height: 300px;
            overflow-y: auto;
        }

        .notification-item {
            padding: 8px 10px;
            border-bottom: 1px solid #eee;
            font-size: 0.9rem;
        }

        .notification-item:last-child {
            border-bottom: none;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    @* SIDEBAR *@
    <aside class="sidebar collapsed">
        @* SideBar Header *@
        <header class="sidebar-header">
            <a href="#" class="header-logo">
                <img src="~/images/BBP Logo.png" alt="BPP" />
            </a>
            <h1 class="system-name">BlueprintPro</h1>
            <button class="toggler sidebar-toggler">
                <span class="material-symbols-rounded">chevron_left</span>
            </button>
        </header>
        <nav class="sidebar-nav">
            @* SideBar Contents *@
            <ul class="nav-list primary-nav">
                <li class="nav-item">
                    <a asp-controller="ArchitectInterface" asp-action="ArchitectDashboard" class="nav-link">
                        <span class="nav-icon material-symbols-rounded">monitoring</span>
                        <span class="nav-label">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="ArchitectInterface" asp-action="PendingMatches" class="nav-link">
                        <span class="nav-icon material-symbols-rounded">handshake</span>
                        <span class="nav-label">Matches</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="ArchitectInterface" asp-action="Blueprints" class="nav-link">
                        <span class="nav-icon material-symbols-rounded">house</span>
                        <span class="nav-label">Blueprints</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="ArchitectInterface" asp-action="Projects" class="nav-link">
                        <span class="material-symbols-rounded">note_stack</span>
                        <span class="nav-label">Projects</span>
                    </a>
                </li>
            </ul>
        </nav>
        <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
            <button type="submit" class="logout-btn nav-link">
                <span class="material-symbols-rounded">logout</span>
            </button>
        </form>
    </aside>
    @*NAVBAR*@
    <nav class="navbar">
        <div class="navbar-div">
            <ul class="navbar-list">
                <li class="top-nav-item">
                    <a href="#" class="top-nav-link">
                        <span class="material-symbols-rounded">chat_bubble</span>
                    </a>
                </li>
                <li class="top-nav-item">
                    <a href="#" class="top-nav-link">
                        <span class="material-symbols-rounded">notifications</span>
                    </a>
                </li>
                <li class="top-nav-item">
                    <a asp-controller="Account" asp-action="Profile" class="top-nav-link">
                        <span class="material-symbols-rounded">account_circle</span>
                    </a>

                    <!-- Notification Panel -->
                    <div id="notificationPanel"
                         class="position-absolute end-0 mt-2 p-3 bg-white border rounded shadow"
                         style="display:none; min-width: 280px; z-index:2000;">
                        <div id="notificationList">
                            <div id="emptyNotification" class="text-muted small text-center">
                                Notification's empty at the moment...
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <main class="container mt-4">
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

    @*SCRIPTS*@
    <script>
        const sidebar = document.querySelector(".sidebar");
        const sidebarToggler = document.querySelector(".sidebar-toggler");

        @*Collapsed state*@
        sidebarToggler.addEventListener("click", ()=>{
            sidebar.classList.toggle("collapsed")
        });

        const bell = document.getElementById("notificationBell");
        const panel = document.getElementById("notificationPanel");
        const list = document.getElementById("notificationList");
        const emptyState = document.getElementById("emptyNotification");

        // Toggle panel on bell click
        bell.addEventListener("click", (e) => {
            e.preventDefault();
            panel.style.display = (panel.style.display === "none" || panel.style.display === "")
                ? "block"
                : "none";
        });

        // Add a new notification
        function addNotification(message) {
            if (emptyState) emptyState.style.display = "none";

            const item = document.createElement("div");
            item.className = "notification-item";
            item.textContent = message;

            list.appendChild(item);
        }

    </script>
</body>
</html>