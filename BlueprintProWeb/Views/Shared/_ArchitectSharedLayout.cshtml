@using Microsoft.AspNetCore.Identity
@using BlueprintProWeb.Models

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlueprintProWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlueprintProWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Raleway", sans-serif;
        }

        body {
            min-height: 100vh;
            background-color: #D6D9E0; /* base color */
            margin: 0;
            position: relative;
            overflow: hidden; /* just in case */
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("/images/BPP_Dashboard_BG.png") center/cover no-repeat;
            opacity: 0.4;
            z-index: -1;
            pointer-events: none;
        }

        .sidebar {
            width: 270px;
            position: fixed;
            margin: -8px 8px 16px 16px;
            border-radius: 10px;
            background: #071744;
            height: calc(100vh - 32px);
            transition: 0.4s ease;
            z-index: 1000;
        }

        .sidebar.collapsed {
            width: 85px;
        }

        .sidebar-header {
            position: relative;
            display: flex;
            padding: 25px 20px;
            align-items: center;
            justify-content: space-between;
        }

        .sidebar-header .header-logo {
            display: flex; /* so it hugs the img */
            align-items: center;
            justify-content: center;
            padding: 0; /* remove extra padding */
            margin: 0; /* remove extra margin */
        }

        .sidebar-header .header-logo img {
            width: 46px;
            height: 46px;
            display: block;
            object-fit: contain;
            border-radius: 50%;
        }

        .sidebar-header .system-name {
            font-size: 1.2rem; /* bigger than nav-labels */
            font-weight: 700; /* bold */
            color: #fff;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            transition: opacity 0.4s ease, width 0.4s ease;
        }

        .system-name {
            margin-right: 24px;
            margin-top: 10px;
        }

        .sidebar-nav .nav-list {
            list-style: none;
            display: flex;
            gap: 4px;
            padding: 0 15px;
            flex-direction: column;
            transform: translateY(15px);
        }

        .sidebar-header .toggler {
            position: absolute;
            right: -15px;
            height: 35px;
            width: 35px;
            border: none;
            color: #071744;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border-radius: 50%;
            background: #fff;
            transition: 0.4s ease;
        }

        .sidebar.collapsed .sidebar-header .toggler {
            transform: translate(5px, 0px);
        }

        .sidebar.collapsed .sidebar-header .toggler span {
            transform: rotate(180deg);
            border-radius: 50%;
            outline: 4px solid #071744;
            outline-offset: 4px;
            transition: transform ease-in-out.4s ease;
        }

        .sidebar-header .system-name {
            transition: opacity 1.5s ease;
        }

        .sidebar.collapsed .sidebar-header .system-name {
            opacity: 0;
            width: 0;
            pointer-events: none;
        }

        .sidebar-header .toggler:hover {
            background: #dde4fb;
        }

        .sidebar-header .toggler span {
            font-size: 1.75rem;
            border-radius: 50%;
            outline: 4px solid #071744;
            outline-offset: 4px;
            transition: transform 0.4s ease, outline 0.4s ease;
        }

        .sidebar-nav .nav-link {
            display: flex;
            align-items: center;
            color: #fff;
            text-decoration: none;
            gap: 50px;
            padding: 12px 15px;
            border-radius: 8px;
            transition: 0.4s ease;
        }

        .sidebar-nav .nav-link:hover {
            background: #fff;
            color: #071744;
        }

        .sidebar-nav .nav-link .nav-label {
            transition: opacity 0.4s ease;
        }

        .sidebar.collapsed .sidebar-nav .nav-link .nav-label {
            opacity: 0;
            pointer-events: none;
        }

        .sidebar-nav {
            position: absolute;
            width: 100%;
            padding-top: 20px;
        }

        .navbar {
            position: fixed;
            top: 15px;
            left: 15px;
            right: 15px;
            height: 60px;
            background: #fff;
            z-index: 90;
            display: flex;
            justify-content: space-between; /* Changed from flex-end to space-between */
            align-items: center;
            border-radius: 8px;
            padding: 0 25px; /* Add horizontal padding */
        }

        /* Pro indicator in header */
        .header-pro-indicator {
            background: linear-gradient(135deg, #0D3C80, #1a5bb8);
            color: white;
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.8px;
            box-shadow: 0 4px 15px rgba(13, 60, 128, 0.3);
            animation: headerProGlow 2s ease-in-out infinite alternate;
        }

        @@keyframes headerProGlow {
            0%

        {
            box-shadow: 0 4px 15px rgba(13, 60, 128, 0.3);
        }

        100% {
            box-shadow: 0 4px 20px rgba(13, 60, 128, 0.5);
        }

        }

        .navbar-div {
            display: flex;
            align-items: center;
            height: 100%;
        }

        .navbar-list {
            display: flex;
            align-items: center;
            margin: 0;
            padding: 0;
        }

        .top-nav-item {
            list-style: none;
        }

        .top-nav-item a {
            display: flex;
            align-items: center;
            justify-content: center;
            color: #071744;
            margin-right: 25px;
            text-decoration: none;
            height: 100%;
            gap: 6px;
        }

        .logout-form {
            position: absolute;
            bottom: 20px;
            width: calc(100% - 30px);
            left: 15px;
        }

        .logout-btn {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 8px;
            background: #e63946; /* red */
            color: #fff;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            cursor: pointer;
            transition: 0.3s ease;
        }

        .logout-btn:hover {
            background: #fff;
            border-color: #d62828;
        }

        #notificationPanel {
            max-height: 300px;
            overflow-y: auto;
        }

        .notification-item {
            padding: 8px 10px;
            border-bottom: 1px solid #eee;
            font-size: 0.9rem;
        }

        .notification-item:last-child {
            border-bottom: none;
        }

        .notif-badge {
            position: absolute;
            top: 0px;
            right: 0px;
            width: 10px;
            height: 10px;
            background-color: #e63946;
            border-radius: 50%;
            display: inline-block;
            box-shadow: 0 0 0 2px #fff;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }


        .notif-badge.d-none {
            opacity: 0;
            visibility: hidden;
        }



        * { margin:0; padding:0; box-sizing:border-box; font-family:"Raleway",sans-serif; }
        #page-loader { position:fixed; inset:0; display:flex; align-items:center; justify-content:center; background:#ffffff; z-index:10000; transition:opacity .3s ease; }
        .spinner { width:56px; height:56px; border:6px solid #e2e8f0; border-top-color:#344EAD; border-radius:50%; animation: pageLoaderSpin 1s linear infinite; }
        .header-pro-indicator { background:linear-gradient(135deg,#0D3C80,#1a5bb8); color:#fff; padding:6px 16px; border-radius:20px; font-size:.8rem; font-weight:700; letter-spacing:.8px; }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div id="page-loader" aria-live="polite" aria-busy="true">
        <lottie-player id="bpp-loader" src="/animations/Loading.json" background="transparent" speed="1" loop autoplay style="width:128px;height:128px"></lottie-player>
        <div class="spinner" role="status" aria-label="Loading"></div>
    </div>
    @inject UserManager<User> UserManager
    @{ var user = await UserManager.GetUserAsync(User); var isPro = user?.IsProActive ?? false; }
    <aside class="sidebar collapsed">
        <header class="sidebar-header">
            <a href="#" class="header-logo"><img src="~/images/BBP Logo.png" alt="BPP" /></a>
            <h1 class="system-name">BlueprintPro</h1>
            <button class="toggler sidebar-toggler"><span class="material-symbols-rounded">chevron_left</span></button>
        </header>
        <nav class="sidebar-nav">
            <ul class="nav-list primary-nav">
                <li class="nav-item"><a asp-controller="ArchitectInterface" asp-action="ArchitectDashboard" class="nav-link"><span class="nav-icon material-symbols-rounded">monitoring</span><span class="nav-label">Dashboard</span></a></li>
                <li class="nav-item"><a asp-controller="ArchitectInterface" asp-action="Matches" class="nav-link"><span class="nav-icon material-symbols-rounded">handshake</span><span class="nav-label">Matches</span></a></li>
                <li class="nav-item"><a asp-controller="ArchitectInterface" asp-action="Blueprints" class="nav-link"><span class="nav-icon material-symbols-rounded">house</span><span class="nav-label">Blueprints</span></a></li>
                <li class="nav-item"><a asp-controller="ArchitectInterface" asp-action="Projects" class="nav-link"><span class="material-symbols-rounded">note_stack</span><span class="nav-label">Projects</span></a></li>
            </ul>
        </nav>
        <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form"><button type="submit" class="logout-btn nav-link"><span class="material-symbols-rounded">logout</span></button></form>
    </aside>
    <nav class="navbar">
        <div>@if (isPro){ <span class="header-pro-indicator">PRO</span> }</div>
        <div class="navbar-div">
            <ul class="navbar-list">
                <li class="top-nav-item position-relative">
                    <a asp-controller="ArchitectInterface" asp-action="Messages" class="top-nav-link position-relative d-inline-block">
                        <span class="material-symbols-rounded">chat_bubble</span>
                        <span id="msgBadgeArchitect" class="notif-badge d-none"></span>
                    </a>
                </li>
                <li class="top-nav-item">
                    <a asp-controller="ArchitectInterface" asp-action="Notifications"
                       class="top-nav-link position-relative d-inline-block">
                        <span class="material-symbols-rounded">notifications</span>
                        <span id="notifBadge" class="notif-badge d-none"></span>
                    </a>
                </li>
                <li class="top-nav-item">
                    <a asp-controller="Account" asp-action="Profile" class="top-nav-link">
                        <span class="material-symbols-rounded">account_circle</span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <main class="container mt-4">@RenderBody()</main>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Lottie Player (for .json/.lottie animations) -->
    <script src="https://unpkg.com/@@lottiefiles/lottie-player@2/dist/lottie-player.js" crossorigin="anonymous"></script>
    <script src="~/js/modal.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

    @RenderSection("Scripts", required: false)
    <script>
        const sidebar = document.querySelector('.sidebar');
        const sidebarToggler = document.querySelector('.sidebar-toggler');
        if(sidebarToggler){ sidebarToggler.addEventListener('click', ()=> sidebar.classList.toggle('collapsed')); }
        document.addEventListener('DOMContentLoaded', async ()=>{
            try{ const r = await fetch('/ArchitectInterface/GetUnreadNotificationsCount'); if(!r.ok) throw new Error(); const c = await r.json(); const b = document.getElementById('notifBadge'); if(b){ c>0? b.classList.remove('d-none'): b.classList.add('d-none'); } }catch(e){ console.error('Notification fetch error', e); }
        });
        document.addEventListener('DOMContentLoaded', ()=>{
            const notifBadge = document.getElementById('notifBadge');
            function updateBadge(){ const unread = document.querySelectorAll('.list-group-item:not([style*="opacity: 0.6"])').length; if(notifBadge){ unread>0? notifBadge.classList.remove('d-none'): notifBadge.classList.add('d-none'); } }
            updateBadge();
            document.querySelectorAll('.list-group-item').forEach(i=>{ i.addEventListener('click', async function(){ const id = this.dataset.id; await fetch('@Url.Action("MarkAsRead")',{ method:'POST', headers:{'Content-Type':'application/x-www-form-urlencoded'}, body:'id='+id }); this.style.opacity='0.6'; this.style.fontWeight='normal'; updateBadge(); }); });
        });

        document.addEventListener("DOMContentLoaded", async function () {
            try {
                const response = await fetch('/ArchitectInterface/GetUnreadMessagesCount');
                const count = await response.json();

                console.log("ARCHITECT unread messages:", count);

                const msgBadge = document.getElementById("msgBadgeArchitect");

                if (count > 0) {
                    msgBadge.innerText = count;
                    msgBadge.classList.remove("d-none");
                } else {
                    msgBadge.classList.add("d-none");
                }
            } catch (err) {
                console.error("Error loading unread messages:", err);
            }
        });

        //REAL TIME SCRIPTS
        document.addEventListener("DOMContentLoaded", async () => {

        // ------------------------------
        // 1. Identify the logged-in user
        // ------------------------------
        const userId = "@User?.FindFirst("sub")?.Value"; // ASP.NET Identity user Id
        if (!userId) return;

        // ------------------------------
        // 2. Build SignalR connection
        // ------------------------------
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationHub")
            .build();

        // ------------------------------
        // 3. Handle NEW Notification push
        // ------------------------------
        connection.on("ReceiveNotification", (notif) => {
            console.log("📩 Real-time Notification:", notif);

            const notifBadge = document.getElementById("notifBadge");
            if (notifBadge) notifBadge.classList.remove("d-none");

            refreshNotificationCount();
        });

        // ------------------------------
        // 4. Handle NEW Message push
        // ------------------------------
        connection.on("ReceiveMessage", (msg) => {
            console.log("💬 Real-time Message:", msg);

            const msgBadge = document.getElementById("msgBadge");
            if (msgBadge) msgBadge.classList.remove("d-none");

            refreshMessageCount();
        });

        // ------------------------------
        // 5. Start signalR
        // ------------------------------
        await connection.start().catch(err => console.error(err));

        // ------------------------------
        // 6. Load initial counts
        // ------------------------------
        refreshNotificationCount();
        refreshMessageCount();

        // ------------------------------
        // 7. API loaders
        // ------------------------------
        async function refreshNotificationCount() {
            const isArchitect = window.location.pathname.toLowerCase().includes("architectinterface");

            const url = isArchitect
                ? "/ArchitectInterface/GetUnreadNotificationsCount"
                : "/ClientInterface/GetUnreadNotificationsCount";

            try {
                const res = await fetch(url);
                const count = await res.json();

                const notifBadge = document.getElementById("notifBadge");
                if (notifBadge) {
                    count > 0
                        ? notifBadge.classList.remove("d-none")
                        : notifBadge.classList.add("d-none");
                }
            } catch (err) {
                console.error("Error loading notification count:", err);
            }
        }

        async function refreshMessageCount() {
            const isArchitect = window.location.pathname.toLowerCase().includes("architectinterface");

            const url = isArchitect
                ? "/ArchitectInterface/GetUnreadMessagesCount"
                : "/ClientInterface/GetUnreadMessagesCount";

            try {
                const res = await fetch(url);
                const count = await res.json();

                const msgBadge = document.getElementById("msgBadge");
                if (msgBadge) {
                    count > 0
                        ? msgBadge.classList.remove("d-none")
                        : msgBadge.classList.add("d-none");
                }
            } catch (err) {
                console.error("Error loading messages:", err);
            }
        }
    </script>
</body>
</html>