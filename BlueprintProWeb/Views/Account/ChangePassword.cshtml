@using BlueprintProWeb.ViewModels;
@model ChangePasswordViewModel;

@{
	ViewData["Title"] = "Change Password";
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - BlueprintPro</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>
	<style>
		* {
			font-family: 'Raleway', sans-serif;
		}

		body {
			margin: 0;
			padding: 20px;
			height: 100vh;
			background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
			box-sizing: border-box;
		}

		.change-password-container {
			display: flex;
			height: calc(100vh - 40px);
			width: 100%;
			background: white;
			border-radius: 24px;
			overflow: hidden;
			box-shadow: 0 20px 60px rgba(13, 60, 128, 0.15);
			position: relative;
		}

		.change-password-left {
			flex: 1;
			position: relative;
			background: url("/images/bldg_img_1") center/cover no-repeat;
			overflow: hidden;
			clip-path: polygon(0 0, 85% 0, 70% 100%, 0 100%);
		}

		.change-password-right {
			flex: 1;
			background: #fff;
			display: flex;
			align-items: center;
			justify-content: center;
			padding: 2rem;
			margin-left: -10%;
			padding-left: 15%;
		}

		.change-password-form-container {
			width: 100%;
			max-width: 400px;
		}

		.change-password-welcome {
			text-align: center;
			margin-bottom: 2rem;
		}

		.change-password-title {
			font-size: 2.5rem;
			font-weight: 800;
			color: #091635;
			margin-bottom: 0.5rem;
		}

		.change-password-subtitle {
			color: #6c757d;
			font-weight: 500;
		}

		.form-group {
			margin-bottom: 1.5rem;
		}

		.form-label {
			font-weight: 600;
			color: #091635;
			margin-bottom: 0.5rem;
		}

		.form-control {
			border: 2px solid #e9ecef;
			border-radius: 10px;
			padding: 0.75rem 1rem;
			font-size: 1rem;
			transition: all 0.3s ease;
			background: #fff;
		}

			.form-control:focus {
				border-color: #0D3C80;
				box-shadow: 0 0 0 0.2rem rgba(13, 60, 128, 0.1);
			}

			.form-control[readonly] {
				background-color: #f8f9fa;
				opacity: 1;
			}

		.change-password-btn {
			width: 100%;
			padding: 0.875rem;
			background: linear-gradient(135deg, #0D3C80 0%, #071744 100%);
			border: none;
			border-radius: 25px;
			color: white;
			font-weight: 700;
			font-size: 1rem;
			transition: all 0.3s ease;
			margin-bottom: 1.5rem;
		}

			.change-password-btn:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(13, 60, 128, 0.3);
				background: linear-gradient(135deg, #071744 0%, #0D3C80 100%);
			}

		.back-link {
			text-align: center;
		}

			.back-link a {
				color: #6c757d;
				text-decoration: none;
				font-weight: 500;
			}

				.back-link a:hover {
					color: #0D3C80;
					text-decoration: underline;
				}

		.text-danger {
			font-size: 0.875rem;
			margin-top: 0.25rem;
		}

		/* Responsive Design */
		@@media (max-width: 768px) {
			body

		{
			padding: 10px;
		}

		.change-password-container {
			flex-direction: column;
			height: calc(100vh - 20px);
		}

		.change-password-left {
			height: 40vh;
			clip-path: polygon(0 0, 100% 0, 100% 85%, 0 95%);
		}

		.change-password-right {
			height: 60vh;
			padding: 1rem;
			margin-left: 0;
			padding-left: 2rem;
			margin-top: -5%;
			padding-top: 10%;
		}

		.change-password-title {
			font-size: 2rem;
		}

		}

		@@media (max-width: 480px) {
			body

		{
			padding: 5px;
		}

		.change-password-container {
			border-radius: 16px;
			height: calc(100vh - 10px);
		}

		.change-password-right {
			padding: 1rem;
		}

		.change-password-title {
			font-size: 1.75rem;
		}

		}
	</style>

	<div class="change-password-container">
		<!-- Left Side - Display Image Only -->
		<div class="change-password-left">
			<!-- Pure image display - no content overlay -->
		</div>

		<!-- Right Side - Change Password Form -->
		<div class="change-password-right">
			<div class="change-password-form-container">
				<div class="change-password-welcome">
					<h2 class="change-password-title">Change Password</h2>
					<p class="change-password-subtitle">Create a new secure password</p>
				</div>

				<form asp-action="ChangePassword" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="form-group">
						<label asp-for="Email" class="form-label"></label>
						<input asp-for="Email" class="form-control" readonly />
					</div>

					<div class="form-group">
						<label asp-for="NewPassword" class="form-label"></label>
						<input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter new password" />
						<span asp-validation-for="NewPassword" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label asp-for="ConfirmNewPassword" class="form-label"></label>
						<input asp-for="ConfirmNewPassword" type="password" class="form-control" placeholder="Confirm new password" />
						<span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
					</div>

					<input type="submit" value="Submit" class="change-password-btn" />

					<div class="back-link">
						<a asp-controller="Account" asp-action="VerifyEmail">
							<i class="fas fa-arrow-left me-2"></i>Back
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@section Scripts {
		@{
			await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
		}
	}
</body>
</html>