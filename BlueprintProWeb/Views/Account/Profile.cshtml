@model BlueprintProWeb.ViewModels.ProfileViewModel
@{
    Layout = ViewData["Layout"]?.ToString();
    ViewData["Title"] = "Profile";
}

@section Styles{
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            min-height: 100vh;
        }

        .profile-container {
            max-width: 1440px;
            margin: 0 auto;
            width: 100%;
            padding-top: 40px;
        }

        /* Main background card */
        .profile-main-card {
            background: rgba(255, 255, 255, 0.4);
            backdrop-filter: blur(12px);
            border-radius: 24px;
            padding: 40px;
            margin: 60px 20px 40px 20px;
            box-shadow: 0 12px 40px rgba(13, 60, 128, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .page-header h2 {
            color: #0D3C80;
            font-weight: 700;
        }

        .settings-btn {
            background: transparent;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: #0D3C80;
        }

        .profile-section {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
        }

        .profile-card {
            flex: 2;
            background: rgba(255, 255, 255, 0.85);
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0px 4px 12px rgba(13, 60, 128, 0.08);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .profile-info {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .avatar img {
            width: 64px;
            height: 64px;
            border-radius: 50%;
        }

        .user-details h3 {
            margin: 0;
            color: #0D3C80;
            font-weight: 600;
        }

        .user-details .email,
        .user-details .phone {
            font-size: 0.9rem;
            color: #555;
        }

        .edit-btn {
            background: #0D3C80;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 8px;
            cursor: pointer;
        }

        .side-buttons {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .side-buttons .card {
            background: rgba(255, 255, 255, 0.85);
            border-radius: 16px;
            padding: 16px;
            text-align: center;
            cursor: pointer;
            box-shadow: 0px 4px 12px rgba(13, 60, 128, 0.08);
        }

        .credentials-card {
            background: rgba(255, 255, 255, 0.85);
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0px 4px 12px rgba(13, 60, 128, 0.08);
        }

        .credentials-card h4 {
            margin-top: 0;
            color: #0D3C80;
            font-weight: 600;
        }

        .credentials-card textarea {
            width: 100%;
            min-height: 400px;
            border: 1px solid #EBF1FD;
            border-radius: 8px;
            padding: 10px;
            font-family: 'Poppins', sans-serif;
            margin-bottom: 12px;
        }

        .save-btn {
            background: #0D3C80;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 8px;
            cursor: pointer;
        }
    </style>
}


<div class="profile-container">
    <div class="profile-main-card">
        <div class="page-header">
            <h2>Profile</h2>
            <button class="settings-btn">⚙</button>
        </div>

        <div class="profile-section">
            <div class="profile-card">
                <div class="profile-info">
                    <div class="avatar">
                        <img src="~/images/profile.jpg" alt="Avatar">
                    </div>
                    <div class="user-details">
                        <h3 class="name">@Model.FullName</h3>
                        <div class="email">@Model.Email</div>
                        <div class="phone">@Model.PhoneNumber</div>
                    </div>
                </div>
                <a asp-controller="Account" asp-action="EditProfile" class="edit-btn">✏ Edit</a>
            </div>

            <div class="side-buttons">
                <div class="card">♥ Favorites</div>
                <div class="card">⚑ Subscription</div>
            </div>
        </div>

        <div class="credentials-card">
            <h4>Architect Credentials</h4>
            <textarea readonly>N/A</textarea>
        </div>
    </div>
</div>
