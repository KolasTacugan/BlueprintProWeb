@{
    ViewData["Title"] = "Home Page";
    ViewData["HideNavigation"] = true;
}

@section Styles{
    <style>
        .get-started-btn {
            background-color: #000; 
            color: #fff; 
            padding: 10px 20px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 600;
            transition: 0.3s ease; 
            display: inline-block;
        }

        .get-started-btn:hover {
            background-color: #fff; 
            color: #000;
            border: 1px solid #000;
        }

    </style>
}

@section Hero {
    <div class="hero-section" style="background-image:url('@Url.Content("~/images/landing-bg.png")')">
        <!-- Logo -->
        <div class="logo">
            <img src="~/images/logo.png" alt="BlueprintPro Logo">
        </div>

        <!-- Overlay -->
        <div class="overlay"></div>

        <!-- Content -->
        <div class="hero-content container">
            <h1 class="brand-title">Blueprint<span class="pro">Pro</span></h1>
            <h2 class="tagline">Connect. Share. Build.</h2>
            <p class="description">
                Connecting people, designs, and progress—architecture made simple.
            </p>
            <a asp-controller="Account" asp-action="Login" class="get-started-btn">Get Started</a>
        </div>
    </div>
}
